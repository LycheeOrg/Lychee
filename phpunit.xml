<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" bootstrap="vendor/autoload.php" colors="true" processIsolation="false" stopOnFailure="false" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/11.0/phpunit.xsd">
  <coverage>
    <report>
      <clover outputFile="clover.xml"/>
      <text outputFile="php://stdout" showUncoveredFiles="false"/>
    </report>
  </coverage>
  <testsuites>
    <testsuite name="Unit">
      <directory suffix="Test.php">./tests/Unit</directory>
      <exclude>./tests/Unit/Http/Requests/Base/BaseRequestTest.php</exclude>
    </testsuite>
    <testsuite name="Feature_v2">
      <directory suffix="Test.php">./tests/Feature_v2</directory>
      <exclude>./tests/Feature_v2/Base/BaseApiTest.php</exclude>
      <exclude>./tests/Feature_v2/Base/BaseApiWithDataTest.php</exclude>
      <exclude>./tests/Feature_v2/ImageHandlers/BaseImageHandler.php</exclude>
    </testsuite>
    <testsuite name="Install">
      <directory suffix="Test.php">./tests/Install</directory>
    </testsuite>
    <testsuite name="Webshop">
      <directory suffix="Test.php">./tests/Webshop</directory>
      <exclude>./tests/Webshop/BaseCheckoutControllerTest.php</exclude>
    </testsuite>
  </testsuites>
  <extensions>
    <bootstrap class="Tests\BootExtension"/>
  </extensions>
  <logging/>
  <php>
    <env name="APP_ENV" value="testing"/>
    <env name="LYCHEE_UPLOADS_DIR" value="uploads/"/>
    <env name="DB_CONNECTION" value="sqlite"/>
    <env name="DB_DATABASE" value="database/database.sqlite"/>
    <env name="DB_LOG_SQL" value="false"/>
    <env name="DB_LOG_SQL_EXPLAIN" value="false"/>
    <env name="BCRYPT_ROUNDS" value="4"/>
    <env name="CACHE_DRIVER" value="array"/>
    <env name="SESSION_DRIVER" value="array"/>
    <env name="QUEUE_CONNECTION" value="sync"/>
    <env name="MAIL_DRIVER" value="array"/>
    <ini name="memory_limit" value="512M"/>
  </php>
  <source>
    <include>
      <directory suffix=".php">
        ./app
      </directory>
    </include>
  </source>
</phpunit>